{
  "presets": [
    "module:metro-react-native-babel-preset"
  ],
  "sourceMaps": "inline",
  "plugins": [
    [
      "@babel/plugin-proposal-decorators",
      {
        "legacy": true
      }
    ],
    [
      "module-resolver", {
        "extensions": [
          ".js",
          ".json",
          ".ts",
          ".tsx",
          ".css"
        ],
        "root": [
          "./src"
        ],
        "alias": {
          "~assets": "./src/assets",
          "~components": "./src/components",
          "~screens": "./src/screens",
          "~stores": "./src/stores",
          "~utils": "./src/utils",
          "~config": "./src/config"
        }
      }
    ]
  ]
}
